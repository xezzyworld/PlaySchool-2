<h2>Change Profile Picture</h2>
@Html.ActionLink("Back to Account Manager","Index","Manage",null,new {@class="btn btn-info"})
<hr/>
@if (ViewBag.OperationResultMessage != null)
{
    <div class="alert alert-info"><p>@ViewBag.OperationResultMessage</p></div>
}
<!DOCTYPE html>
@using (Html.BeginForm("UploadProfilePicture", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="file" name="file" class="btn btn-default btn-file" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Change Profile Picture" />
            </div>
        </div>
    </div>
}
