@model PlaySchool.Models.VMs.Manage.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="col-md-4">Password:</dt>
        <dd class="col-md-8">
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword", null, new { @class = "btn btn-info col-md-8" })
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword", null, new { @class = "btn btn-info" })
            }
        </dd>
        <dt class="col-md-4">Profile Picture:</dt>
        <dd class="col-md-8">
            @Html.ActionLink("Change your profile picture", "UploadProfilePicture",null,new {@class = "btn btn-info col-md-8" })
        </dd>
